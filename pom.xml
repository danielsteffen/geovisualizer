<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.dfki.av.sudplan</groupId>
  <artifactId>sudplan</artifactId>
  <packaging>jar</packaging>
  <version>0.0.1</version>
  <name>sudplan</name>
  <description>Sustainable Urban Development Planner for Climate Change Adaptation</description>
  <url>http://www.sudplan.eu</url>
  <dependencies>
		<dependency>
			<groupId>java3d</groupId>
			<artifactId>j3dcore</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>java3d</groupId>
			<artifactId>j3dutils</artifactId>
			<version>1.5.2</version>
		</dependency>
		<dependency>
			<groupId>java3d</groupId>
			<artifactId>vecmath</artifactId>
			<version>1.5.2</version>
		</dependency>
    <dependency>
      <groupId>org.jdesktop</groupId>
      <artifactId>beansbinding</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>org.swinglabs</groupId>
      <artifactId>swing-layout</artifactId>
      <version>1.0.3</version>
    </dependency>
  </dependencies>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<sudplan.main>com.dfki.av.sudplan.test.SudplanApp</sudplan.main>
	</properties>

  <!-- More Project Information -->
	<organization>
		<name>Deutsches Forschungszentrum für Künstliche Intelligenz (DFKI) GmbH</name>
		<url>http://www.dfki.de</url>
	</organization>
	<developers>
	  <developer>
		<name>Daniel Steffen</name>
		<organization>DFKI GmbH</organization>
	  </developer>
	  <developer>
		<name>Martin Weller</name>
		<organization>DFKI GmbH</organization>
	  </developer>
	  <developer>
		<name>Frank Michel</name>
		<organization>DFKI GmbH</organization>
	  </developer>
	</developers>

	<!-- Build Settings -->
	<build>
		<!-- For annotations and other Java5 stuff -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>${sudplan.main}</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
                        </plugins>
	</build>

	<!-- Environment Settings -->
    <repositories>
      <repository>
        <id>central</id>
        <url>http://av.kl.dfki.de/artifactory/repo</url>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>
      </repository>

      <repository>
        <id>snapshots</id>
        <url>http://av.kl.dfki.de/artifactory/repo</url>
        <releases>
          <enabled>false</enabled>
        </releases>
      </repository>
      <repository>
        <url>http://download.java.net/maven/2/</url>
        <id>beans-binding</id>
        <layout>default</layout>
        <name>Repository for library Library[beans-binding]</name>
      </repository>
    </repositories>
     
    <pluginRepositories>
    
      <pluginRepository>
        <id>central</id>
        <url>http://av.kl.dfki.de/artifactory/repo</url>
        <snapshots>
          <enabled>false</enabled>
        </snapshots>
      </pluginRepository>
    
      <pluginRepository>
        <id>snapshots</id>
        <url>http://av.kl.dfki.de/artifactory/repo</url>
        <releases>
          <enabled>false</enabled>
        </releases>
      </pluginRepository>
      
    </pluginRepositories>	
</project>
